@page "/"
@page "/Login"

<PageTitle>Gimpies Login</PageTitle>

<style>
    body {
        background-color: #121212; 
        color: #ffffff;
    }

    .login-card {
        width: 500px;
        height: auto;
        margin: auto;
        margin-top: 200px;
        padding: 50px;
        background-color: #1f1f1f;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-custom {
        background-color: #007bff;
        color: white; 
        border: none;
        border-radius: 5px;
        width: 100%;
    }

    .btn-custom:hover {
        background-text-center: #0056b3;
    }

    .register {
        text-align: center;
        margin-top: 10px;
    }

    .form {
        margin-top: 30px;
    }

    .btn:hover {
    background-color: #0056b3;
}

    .notify {
        margin-top: 13px;
    }

    .btn-close:focus {
        box-shadow: none;
    }

</style>

<div class="container mt-5">
    <div class="login-card">
        <h2 class="text-center">Gimpies Login</h2>
        <div class="form">
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" id="username" @bind="username" placeholder="Gebruikersnaam" required />
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" id="password" @bind="password" placeholder="Wachtwoord" required />

                    @if (warningMessage != null)
                    {
                        <div class="notify">
                            <div class="alert alert-warning alert-dismissible fade show alert-custom" role="alert">
                                @warningMessage
                                <button type="reset" class="btn-close" data-bs-dismiss="alert" aria-label="Close" @onclick="ClearWarningMessage"></button>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" class="btn btn-custom" @onclick="HandleLogin">Inloggen</button>

                <div class="register">
                    Heb je nog geen account? 
                    <a href="/register">Registreren</a>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    private string? username;
    private string? password;
    private string? warningMessage;

    private void HandleLogin()
    {
        if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password))
        {
            warningMessage = "Vul alle velden correct in!";
        }
        else if (username == "admin" && password == "1234")
        {
            // login logic
            warningMessage = null;
        }
        else
        {
            warningMessage = "Ongeldige inloggegevens!";
        }

        // Debug prints
        Console.WriteLine($"Username: {username}");
        Console.WriteLine($"Password: {password}");
    }

    private void ClearWarningMessage()
    {
        warningMessage = null;
    }
}
