    <div class="login-card">
        <h2 class="text-center">Gimpies Login</h2>
        <div class="form">
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" id="username" @bind="username" placeholder="Gebruikersnaam" required />
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" id="password" @bind="password" placeholder="Wachtwoord" required />
                </div>

                <button type="submit" class="btn btn-custom" @onclick="HandleLogin">Inloggen</button>

                <div class="register">
                    Heb je nog geen account? 
                    <a href="/registeren">Registreren</a>
                </div>
            </form>
        </div>
    </div>
</div>

