<style>
    body {
        background-color: #121212; 
        color: #ffffff;
    }

    .login-card {
        width: 500px;
        height: 350px;
        margin: auto;
        margin-top: 200px;
        padding: 50px;
        background-color: #1f1f1f;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-custom {
        background-color: #007bff;
        color: white; 
        border: none;
        border-radius: 5px;
        width: 100%;
    }

    .btn-custom:hover {
        background-text-center: #0056b3;
    }

    .register {
        text-align: center;
        margin-top: 10px;
    }

    .form {
        margin-top: 30px;
    }

    .btn:hover {
