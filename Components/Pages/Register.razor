@page "/Register"

<PageTitle>Gimpies Registreren</PageTitle>

<style>
    body {
        background-color: #121212; 
        color: #ffffff;
    }

    .login-card {
        width: 500px;
        height: auto;
        margin: auto;
        margin-top: 200px;
        padding: 50px;
        background-color: #1f1f1f;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-custom {
        background-color: #007bff;
        color: white; 
        border: none;
        border-radius: 5px;
        width: 100%;
    }

    .btn-custom:hover {
        background-text-center: #0056b3;
    }

    .register {
        text-align: center;
        margin-top: 10px;
    }

    .form {
        margin-top: 30px;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    .notify {
        margin-top: 13px;
    }

    .btn-close:focus {
        box-shadow: none;
    }

</style>

<div class="container mt-5">
    <div class="login-card">
        <h2 class="text-center">Gimpies Registreren</h2>
        <div class="form">
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" id="username" @bind="username" placeholder="Gebruikersnaam" required />
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" id="password" @bind="password" placeholder="Wachtwoord" required />
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" id="password_confirm" @bind="password_confirm" placeholder="Herhaal Wachtwoord" required />
                    @if (warningMessage != null)
                    {
                        <div class="notify">
                            <div class="alert alert-warning alert-dismissible fade show alert-custom" role="alert">
                                @warningMessage
                                <button type="reset" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                </div>

                <button type="reset" class="btn btn-custom" @onclick="HandleRegister">Registreren</button>

                <div class="register">
                    Heb je al een account? 
                    <a href="/login">Inloggen</a>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    private string? username;
    private string? password;
    private string? password_confirm;
    private string? warningMessage;
    
    private void HandleRegister()
    {
        // Check if all fields are filled in and if the passwords match
        if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password) || string.IsNullOrEmpty(password_confirm))
        {
            warningMessage = "Vul alle velden correct in!";
        }
        else if (password != password_confirm)
        {
            warningMessage = "De wachtwoorden komen niet overeen!";
        }
        else
        {
            warningMessage = null;
            //return;
        }

        // Debug prints
        Console.WriteLine($"Username: {username}");
        Console.WriteLine($"Password: {password}");
        Console.WriteLine($"Password Confirm: {password_confirm}\n");
    }
}
